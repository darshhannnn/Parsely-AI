# Required API Keys
GOOGLE_API_KEY=your_gemini_api_key_here

# Optional: Alternative LLM Providers
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_key
# AZURE_OPENAI_API_KEY=your_azure_key
# AZURE_OPENAI_ENDPOINT=your_azure_endpoint

# Model Configuration
LLM_PROVIDER=google
LLM_MODEL=gemini-1.5-pro
# Alternative Gemini models: gemini-1.5-flash, gemini-pro, gemini-pro-vision
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Document Processing Settings
POLICY_DOCUMENTS_PATH=data/policies
EMBEDDINGS_PATH=data/embeddings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=4000
TOP_K_RESULTS=10
SIMILARITY_THRESHOLD=0.7

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
CACHE_TTL_SECONDS=3600
ENABLE_QUERY_CACHING=true

# Security Settings (for production)
# API_KEY_SECRET=your_api_secret_for_authentication
# JWT_SECRET=your_jwt_secret
# ENCRYPTION_KEY=your_encryption_key

# Database Settings (if using external databases)
# DATABASE_URL=postgresql://user:password@localhost:5432/llm_docs
# REDIS_URL=redis://localhost:6379/0

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn
# DATADOG_API_KEY=your_datadog_key